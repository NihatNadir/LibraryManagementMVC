@model AuthorEntity

<h3 class="mt-5">Add Author</h3>
<form 
class="book-form"
method="post"
asp-controller="Author"
asp-action="Create"
>


    <div class="mb-3 title">
        <label>Author's Full Name</label>
        <input type="text" class="form-control"
        asp-for="FullName"
         />
        <span 
        asp-validation-for="FullName" 
        class="text-danger fw-bold"
        ></span>
    </div>

    
   
    <button 
    type="submit" 
    class="btn btn-primary mt-3 submit"   
    >Add</button>

</form>
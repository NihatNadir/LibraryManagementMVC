@model BookViewModel

<h3 class="mt-5">Edit Book</h3>
<form 
    class="book-form"
    method="post"
    asp-controller="Book"
    asp-action="Edit"   
>
    <input asp-for="Book.Id" />
    <div class="mb-3 title">
        <label>Title</label>
        <input type="text" class="form-control"
               asp-for="Book.Title" />
        <span asp-validation-for="Book.Title" class="text-danger fw-bold"></span>
    </div>

    <div class="mb-3 genre">
        <label>Genre</label>
        <select 
            class="form-control"         
            asp-for="Genres"
            asp-items="@(new SelectList(ViewBag.GenreList, "Id", "Name"))"
            multiple="multiple">
        </select>
        <span asp-validation-for="Genres" class="text-danger fw-bold"></span>
    </div>

    <div class="mb-3 publish-date">
        <label>Publish Date</label>
        <input type="date" class="form-control date" asp-for="Book.PublishDate" />
        <span asp-validation-for="Book.PublishDate" class="text-danger fw-bold"></span>
    </div>

    <div class="mb-3 isbn">
        <label>ISBN Number</label>
        <input type="text" class="form-control" asp-for="Book.ISBN" />
        <span asp-validation-for="Book.ISBN" class="text-danger fw-bold"></span>
    </div>

    <div class="mb-3 copies-available">
        <label>Quantity</label>
        <input type="number" class="form-control copy" asp-for="Book.CopiesAvailable" />
        <span asp-validation-for="Book.CopiesAvailable" class="text-danger fw-bold"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Book.Price" class="form-label">Price</label>
        <input asp-for="Book.Price" class="form-control" type="number" step="0.01" min="0.01" max="1000000" />
        <span asp-validation-for="Book.Price" class="text-danger fw-bold"></span>
    </div>

    <div class="mb-3 author">
        <label>Author</label>
        <select 
            class="form-control" 
            asp-for="Book.AuthorId"
            asp-items="@(new SelectList(ViewBag.Authors, "Id", "FullName"))">
        </select>
        <span asp-validation-for="Book.AuthorId" class="text-danger fw-bold"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3 submit">Update</button>

</form>